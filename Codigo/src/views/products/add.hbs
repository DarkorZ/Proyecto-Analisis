<div class="container p-4">
    <div class="row">

        <div class="col-xs-12 col-md-9 col-md-push-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12 mx-auto">
                                  
                                    <div class="card-header">
                                        <div class="panel-heading text-center">
                                            <h3>
                                                <div class="panel-title">Registro de Productos</div>
                                            </h3>
                                        </div>
                                    </div>
                                   
                                        <form action="/products/add" method="POST" class="row g-3 needs-validation"
                                            enctype="multipart/form-data">

                                            <div class="col-md-4">
                                                <label class="form-label">Nombre:</label>
                                                <input type="text" name="PRODUCTO_NOMBRE" class="form-control"
                                                    placeholder="Nombre" maxlength="60" oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" required autofocus>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Categoría:</label>
                                                <div class="form-label">
                                                    <select name="CATEGORIA_ID" class="form-control" required>
                                                        {{#each category}}
                                                        <option value="{{CATEGORIA_ID}}">{{CATEGORIA_NOMBRE}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Presentación:</label>
                                                <div class="form-label">
                                                    <select name="PRESENTACION_ID" class="form-control" required>
                                                        {{#each presentation}}
                                                        <option value="{{PRESENTACION_ID}}">{{PRESENTACION_NOMBRE}}
                                                        </option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Unidad de Medida:</label>
                                                <div class="form-label">
                                                    <select name="MEDIDA_ID" class="form-control" required>
                                                        {{#each measure}}
                                                        <option value="{{MEDIDA_ID}}">{{MEDIDA_NOMBRE}}
                                                        </option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Peso por unidad:</label>
                                                <input type="number" name="PRODUCTO_MEDIDA" class="form-control" placeholder="Peso" maxlength="6" oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                                    required>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Cantidad en stock:</label>
                                                <input type="number" name="PRODUCTO_CANTIDAD" class="form-control"
                                                    placeholder="Cantidad" maxlength="6" oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" required>
                                            </div>

                                            <div class="col-md-4">
                                                    <label class="form-label">Precio por unidad:</label>
                                                    <input type="number" name="PRODUCTO_PRECIO" class="form-control"
                                                        placeholder="Precio" min="0" max="9999.99" step="0.01" required style="max-width: 100%;">
                                                </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Fecha de Obtencion:</label>
                                                <div class="form-label">
                                                    <input class="form-control" name="PRODUCTO_FECHACOCECHA" type="date" id="validateTime"
                                                        required>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Fecha Tentativa de Venta:</label>
                                                <div class="form-label">
                                                    <input class="form-control" name="PRODUCTO_FECHALIMITE" type="date"
                                                        id="validateTime" required>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <label class="form-label">Descripción del producto:</label>
                                                <textarea name="PRODUCTO_DESCRIPCION" rows="4" class="form-control"
                                                    placeholder="Descripción" maxlength="200" oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" required></textarea>
                                            </div>

                                            <div class="col-md-6">
                                                <label class="form-label">Descripción de la oferta:</label>
                                                <textarea name="OFERTA_DESCRIPCION" rows="4" class="form-control"
                                                    placeholder="Oferta" maxlength="200" oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"></textarea>
                                            </div>

                                            <div class="mb-3">
                                                <input type="file" accept="image/*" name="SUBIR_IMAGEN"
                                                    class="form-control" onchange="loadFile(event)">
                                            </div>
                                           

                                            <div class="col-12 text-center">
                                                <button class="btn btn-success">
                                                    Guardar
                                                </button>
                                                <a href="/products" class="btn btn-danger">Cancelar</a>
                                            </div>

                                        </form>
                                  
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-3 col-md-pull-9">
            <div class="panel panel-default">
                <div class="card">
                    <div class="card-header">
                        <div class="panel-heading text-center">
                            <h3>
                                <div class="panel-title">Información</div>
                            </h3>
                        </div>
                    </div>
                    <div class=" text-secondary">
                        <h5 class="card-title">Categorías:</h5>
                        {{#each category}}
                        <p>
                            <label for="">{{CATEGORIA_NOMBRE}}:</label> {{CATEGORIA_DESCRIPCION}}<br>
                        </p>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    var loadFile = function (event) {
        var reader = new FileReader();
        reader.onload = function () {
            var output = document.getElementById('output');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    };
</script>
