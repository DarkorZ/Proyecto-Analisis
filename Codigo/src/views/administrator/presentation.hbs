<div class="container p-4">
    <div class="row">

        <!-- Tabla de Presentaciones -->
        <div class="col-md-6">
            <div class="thumbnail row text-center">
                <table class="table caption-top">
                    <caption>Lista de Presentaciones</caption>
                    <thead class="text-center table-secondary">
                        <tr class="card-title text-uppercase">
                            <td>N.º</td>
                            <td>Nombre</td>
                            <td>Modificar</td>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        {{#each presentation}}
                        <tr>
                            <form action="/administrator/presentation/edit" method="POST">
                                <td>{{PRESENTACION_ID}}</td>
                                <td>
                                    <input type="text" value="{{PRESENTACION_NOMBRE}}" name="PRESENTACION_NOMBRE" required>
                                </td>
                                <td>
                                    <input type="hidden" name="PRESENTACION_ID" value="{{PRESENTACION_ID}}">
                                    <button type="submit" class="btn btn-primary">Modificar</button>
                                </td>
                            </form>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Formulario para Agregar Presentación -->
        <div class="col-md-3">
            <div class="card border-dark mb-3">
                <div class="card-header text-center card-title">
                    <h5>Agregar Presentación</h5>
                </div>
                <div class="card-body text-dark">
                    <form action="/administrator/presentation" method="POST" class="row g-3 needs-validation" enctype="multipart/form-data">
                        <p>
                            <label class="form-label">Nombre:</label>
                            <input type="text" name="PRESENTACION_NOMBRE" class="form-control" placeholder="Nombre" required autofocus>
                        </p>
                        <div class="text-center">
                            <button class="btn btn-success">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel de Acciones -->
        <div class="col-md-3">
            <div class="thumbnail row text-center" style="min-height:260px;">
                <div class="panel panel-default">
                    <div class="panel-heading text-center">
                        <h3 class="panel-title">Acciones</h3>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="d-grid gap-3">
                        <a href="/administrator/users" class="btn btn-outline-success">
                            <i class="fal fa-user"></i> Usuarios
                        </a>
                        <a href="/administrator/products" class="btn btn-outline-warning">
                            <i class="fal fa-shopping-cart"></i> Productos
                        </a>
                        <a href="/administrator/measurements" class="btn btn-outline-info">
                            <i class="fas fa-weight-hanging"></i> Unidad de Medida
                        </a>
                        <a href="/administrator/category" class="btn btn-outline-secondary">
                            <i class="fal fa-list"></i> Categoría
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
